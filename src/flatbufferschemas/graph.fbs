include "common.fbs";
include "attributes.fbs";

namespace fpl.fpl_project.graph;

table Pulse {
}

table Bool {
  value:bool;
}

table Int {
  value:int;
}

table Float {
  value:float;
}

table String {
  value:string;
}

table Entity {
}

table Vec3 {
  value:fpl.Vec3;
}

table SoundHandle {
  value:string;
}

table AudioChannel {
}

table OutputEdgeTarget {
  node_index:int;
  edge_index:int;
}

// Max exists to act as a sentinal value when parsing.
table Max {}

union InputType {
  Pulse,
  Bool,
  Int,
  Float,
  String,
  Entity,
  Vec3,
  SoundHandle,
  AudioChannel,
  OutputEdgeTarget,
  Max
}

table InputEdgeDef {
  edge:InputType;
}

table NodeDef {
  module:string;
  name:string;
  input_edge_list:[InputEdgeDef];
}

table GraphDef {
  node_list:[NodeDef];
}

file_extension "fplgraph";
file_identifier "grph";

root_type GraphDef;
